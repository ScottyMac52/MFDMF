{
	"AppSettings": {
		// Defines this users display geometry
		"DisplayConfigurationFile": "displays.json",
		// If true then all images that are cropped from other images are saved
		"SaveCroppedImages": false,
		// Displays a helpful tooltip when you hover over one of the images
		"ShowTooltips": true,
		// Base file path for all image files, modules can override and so can configurations and sub configurations
		"filePath": "E:\\HOTAS\\TARGET\\CTS\\Docs\\Profile JPGs",
		// Default module to load on startup
		"DefaultConfiguration": "TestPattern3",
		// If true then Cougar Throttle images are used
		"UseCougar": false,
		// If true then there is no cacheing and all images are dynamically loaded, useful for adjustments
		"TurnOffCache": false
	}
}